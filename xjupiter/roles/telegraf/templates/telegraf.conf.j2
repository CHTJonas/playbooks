[global_tags]
#  dc = "ovh-erith"

[agent]
  hostname = "{{ ansible_host }}"
  snmp_translator = "gosmi"

[[outputs.influxdb]]
  urls = ["$TELEGRAF_INFLUX_ENDPOINT"]
  database = "$TELEGRAF_INFLUX_DATABASE"
  username = "$TELEGRAF_INFLUX_USERNAME"
  password = "$TELEGRAF_INFLUX_PASSWORD"
  skip_database_creation = true
  timeout = "30s"

[[inputs.conntrack]]

[[inputs.cpu]]
  percpu = true
  totalcpu = true
  collect_cpu_time = false
  report_active = true

[[inputs.disk]]
  ignore_fs = ["tmpfs", "devtmpfs", "devfs", "iso9660", "overlay", "aufs", "squashfs"]

[[inputs.diskio]]

[[inputs.interrupts]]
  cpu_as_tag = true

[[inputs.kernel]]

[[inputs.mem]]

[[inputs.net]]

[[inputs.netstat]]

[[inputs.processes]]

[[inputs.swap]]

[[inputs.system]]
