[global_tags]
#  dc = "ovh-erith"

[agent]
  hostname = "{{ ansible_host }}"

[[outputs.influxdb]]
  urls = ["${TELEGRAF_ENDPOINT}"]
  database = "telegraf"
  skip_database_creation = true
  timeout = "30s"
  username = "${TELEGRAF_USERNAME}"
  password = "${TELEGRAF_PASSWORD}"

[[outputs.influxdb_v2]]
  urls = ["$TELEGRAF_INFLUX_ENDPOINT"]
  token = "$TELEGRAF_INFLUX_TOKEN"
  organization = "$TELEGRAF_INFLUX_ORG"
  bucket = "$TELEGRAF_INFLUX_BUCKET"
  timeout = "30s"

[[inputs.cpu]]
  percpu = true
  totalcpu = true
  collect_cpu_time = false
  report_active = true

[[inputs.mem]]

[[inputs.swap]]

[[inputs.disk]]
  ignore_fs = ["tmpfs", "devtmpfs", "devfs", "iso9660", "overlay", "aufs", "squashfs"]

[[inputs.diskio]]

[[inputs.net]]

[[inputs.conntrack]]

[[inputs.netstat]]

[[inputs.kernel]]

[[inputs.system]]

[[inputs.processes]]
